<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="com.example_server_war_1.0PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.example.server.pojos.User</class>
    <class>com.example.server.pojos.Post</class>
    <class>com.example.server.pojos.Interaction</class>
    <class>com.example.server.pojos.Comment</class>
    <class>com.example.server.pojos.GroupMember</class>
    <class>com.example.server.pojos.Survey</class>
    <class>com.example.server.pojos.Option</class>
    <class>com.example.server.pojos.Alumni</class>
    <class>com.example.server.pojos.Response</class>
    <class>com.example.server.pojos.Share</class>
    <class>com.example.server.pojos.Lecturer</class>
    <class>com.example.server.pojos.Question</class>
    <class>com.example.server.pojos.Group</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/social_media_db?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
    </properties>
  </persistence-unit>
</persistence>
